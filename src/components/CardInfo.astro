---
const { header, body, footer } = Astro.props;
---

<div
  class="w-full h-full flex flex-col col-span-4 lg:col-span-6 md:col-span-full max-md:col-span-full py-10 px-8 max-sm:px-3 bg-[#323232] bg-opacity-90 text-lg"
>
  <p class="flex flex-col gap-2 flex-grow max-sm:text-base">
    <span class="font-semibold">
      {header}
    </span>
    {body}
  </p>
  <span class="text-lg max-sm:text-base font-semibold">{footer}</span>
  <slot name="contact"/>
</div>
