---
const { header, body, footer } = Astro.props;
---

<div
  class="w-full h-full flex flex-col col-span-4 py-10 px-8 bg-[#323232] bg-opacity-90 text-lg"
>
  <p class="flex flex-col gap-2 flex-grow">
    <span class="font-semibold">
      {header}
    </span>
    {body}
  </p>
  <span class="text-lg font-semibold">{footer}</span>
  <slot name="contact"/>
</div>
