---
import ContainSection from "../components/ContainSection.astro";
import CardServices from "../components/CardServices.astro";
import TitleSection from "../components/TitleSection.astro";

import { services } from "../data/service";
---

<ContainSection id="servicios">
  <TitleSection title="Servicios" />

  <footer
    class="w-full grid grid-cols-auto-services max-sm:grid-cols-auto-services-mb gap-5"
  >
    {
      services.map((service) => (
        <CardServices
          nameCard={service.title}
          href={service.id}
          title={service.title}
          src={service.image}
          alt={service.alt}
          loading="lazy"
        />
      ))
    }
  </footer>

  <ContainSection />
</ContainSection>
