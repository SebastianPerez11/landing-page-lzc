---
import CardInfo from "../components/CardInfo.astro";
import Image from "astro/components/Image.astro";
import ObreroImage from "../../public/assets/img/Obrero.webp";
import TitleSection from "../components/TitleSection.astro";
import ContainSection from "../components/ContainSection.astro";
---

<ContainSection id="nosotros">
  <TitleSection title="Nosotros" />

  <footer class="w-full grid grid-cols-auto-12 gap-5">
    <a
      href="/"
      class="w-full h-80 xl:col-span-8 lg:col-span-6 md:col-span-full max-md:col-span-full relative flex items-end overflow-hidden"
    >
      <Image
        src={ObreroImage}
        title="Imagen de Obrero"
        alt="Imagen de Obrero"
        class="w-full h-full object-cover brightness-[.5] transition-transform hover:scale-105"
      />

      <div
        class="pointer-events-none w-full py-5 px-6 max-sm:px-3 absolute flex justify-between items-center"
      >
        <h3 class="text-2xl max-sm:text-xl font-semibold">
          Sobre nuestra empresa
        </h3>
      </div>
    </a>

    <CardInfo
      header="Convertimos tus ideas en realidad con un enfoque innovador y una calidad insuperable."
      body=" Contamos con años de experiencia, te ofrecemos un servicio personalizado y sin complicaciones para asegurar el éxito."
      footer="LZC - Construcciones en general"
    />
  </footer>
</ContainSection>
