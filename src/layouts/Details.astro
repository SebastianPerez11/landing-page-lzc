---
const { imageBox, title, subtitle, body } = Astro.props;

import CardInfoService from "../components/CardInfoService.astro";
import TitleSectionBack from "../components/TitleSectionBack.astro";
import ContainSection from "../components/ContainSection.astro";
---

<ContainSection id="teOfrecemos">
  <TitleSectionBack title="Te ofrecemos" />

  <footer class="w-full grid grid-cols-auto-12 gap-5">
    <CardInfoService
      title={title}
      body={body}
      subtitle={subtitle}
    />

    <img
      src={imageBox}
      title="Imagen de Obrero"
      alt="Imagen de Obrero"
      class="max-sm:h-[260px] brightness-[.5] object-cover w-full h-96 min-h-full xl:col-span-4 lg:col-span-6 md:col-span-full max-md:col-span-full relative flex items-end overflow-hidden"
    />
  </footer>
</ContainSection>
